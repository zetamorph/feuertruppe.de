//- Navbar mixins
mixin nav(name, id, style)
    - var style = (typeof style === 'undefined') ? "default" : style
    nav( id="navbar" class=["navbar", "navbar-" + style] )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            
            a.navbar-brand(href="http://www.feuertruppe.de")
                img(class="img-responsive", src="assets/img/logo/feuershow-logo-kontur-primary.png" alt="Logo der Feuershow aus Jena")
                | Feuertruppe
            
 
        .collapse.navbar-collapse( id=id )
            ul.nav.navbar-nav.navbar-right
                block
 
mixin nav_item(href, active)
    li(class=active): a( href=href)
        block
 
mixin nav_divider
    li.divider
 
mixin nav_header
    li.dropdown-header
        block
 
//- End navbar mixins


